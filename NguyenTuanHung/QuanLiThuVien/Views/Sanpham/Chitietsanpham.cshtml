@using QuanLiThuVien.Models.ViewModel
@{
    ViewBag.Title = "Chitietsanpham";
    Layout = "~/Views/Shared/_Layout_Sanpham.cshtml";
}
@using QuanLiThuVien.Models.Entities
@model QuanLiThuVien.Models.Entities.Sach
@{ 
    var Book = (List<Sach>)ViewBag.AllBooks;
}
<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Trang chủ |</a></li>
                        <li><a href="#">Cửa hàng</a></li>
                        <li><a href="#" class="active">@Model.Tensach</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<!-- product-main-area-start -->
<div class="product-main-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
                <!-- product-main-area-start -->
                @{
                    var session = (TaikhoanLoginModel)Session[QuanLiThuVien.Models.Common.CommonConstant.USER_SESSION];
                }
                @if (session == null)
                {
                <div class="product-main-area">
                    <div class="row">
                        <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                            <div class="flexslider">
                                <div data-thumb="img/thum-2/1.jpg">
                                    <img src="~/Content/img/product/@Model.ImgLink" alt="woman">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-6 col-xs-12">
                            <div class="product-info-main">
                                <div class="page-title">
                                    <h1>@Model.Tensach</h1>
                                </div>
                                <div class="product-info-stock-sku">
                                    <span>Ngày xuất bản</span>
                                    <span class="value">@Model.Namxuatban.ToString("dd/MM/yyyy")</span><br>
                                </div>
                                <div class="product-reviews-summary">
                                    <div class="rating-summary">
                                        <a href="#"><i class="fa fa-star"></i></a>
                                        <a href="#"><i class="fa fa-star"></i></a>
                                        <a href="#"><i class="fa fa-star"></i></a>
                                        <a href="#"><i class="fa fa-star"></i></a>
                                        <a href="#"><i class="fa fa-star"></i></a>
                                    </div>
                                    <div class="reviews-actions">
                                        <a href="#">3 Nhận xét</a>
                                        <a href="#Reviews" class="view">Nhận xét của bạn</a>
                                    </div>
                                </div>
                                <div class="product-add-form">
                                    <form action="#">
                                        <a href="/Taikhoan/Login">Thêm vào giỏ</a>
                                    </form>
                                </div>
                                <div class="product-social-links">
                                    <div class="product-addto-links">
                                        <a href="#"><i class="fa fa-heart"></i></a>
                                        <a href="#"><i class="fa fa-pie-chart"></i></a>
                                        <a href="#"><i class="fa fa-envelope-o"></i></a>
                                    </div>
                                    <div class="product-addto-links-text">
                                        <p>Nội dung sách</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
                else
                {
            <div class="product-main-area">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                        <div class="flexslider">
                            <div data-thumb="img/thum-2/1.jpg">
                                <img src="~/Content/img/product/@Model.ImgLink" alt="woman">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6 col-xs-12">
                        <div class="product-info-main">
                            <div class="page-title">
                                <h1>@Model.Tensach</h1>
                            </div>
                            <div class="product-info-stock-sku">
                                <span>Ngày xuất bản</span>
                                <span class="value">@Model.Namxuatban.ToString("dd/MM/yyyy")</span><br>
                            </div>
                            <div class="product-reviews-summary">
                                <div class="rating-summary">
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star"></i></a>
                                    <a href="#"><i class="fa fa-star"></i></a>
                                </div>
                                <div class="reviews-actions">
                                    <a href="#">3 Nhận xét</a>
                                    <a href="#Reviews" class="view">Nhận xét của bạn</a>
                                </div>
                            </div>
                            <div class="product-add-form">
                                <form action="#">
                                    <a href="/Cart/AddItem?sachID=@Model.SachID&Quantity=1">Thêm vào giỏ</a>
                                </form>
                            </div>
                            <div class="product-social-links">
                                <div class="product-addto-links">
                                    <a href="#"><i class="fa fa-heart"></i></a>
                                    <a href="#"><i class="fa fa-pie-chart"></i></a>
                                    <a href="#"><i class="fa fa-envelope-o"></i></a>
                                </div>
                                <div class="product-addto-links-text">
                                    <p>Nội dung sách</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                }

                <!-- product-main-area-end -->
                <!-- product-info-area-start -->
                <div class="product-info-area mt-80">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#Details" data-toggle="tab">Thông tin</a></li>
                        <li><a href="#Reviews" data-toggle="tab">Nhận xét</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="Details">
                            <div class="valu">
                                <p>The sporty Joust Duffle Bag can't be beat - not in the gym, not on the luggage carousel, not anywhere. Big enough to haul a basketball or soccer ball and some sneakers with plenty of room to spare, it's ideal for athletes with places to go.</p>
                                <ul>
                                    <li><i class="fa fa-circle"></i>Dual top handles.</li>
                                    <li><i class="fa fa-circle"></i>Adjustable shoulder strap.</li>
                                    <li><i class="fa fa-circle"></i>Full-length zipper.</li>
                                    <li><i class="fa fa-circle"></i>L 29" x W 13" x H 11".</li>
                                </ul>
                            </div>
                        </div>
                        <div class="tab-pane" id="Reviews">
                            <div class="valu valu-2">
                                <div class="section-title mb-60 mt-60">
                                    <h2>Nhận xét của khách hàng</h2>
                                </div>
                                <div class="review-field-ratings">
                                    <span>Đánh giá của bạn<sup>*</sup></span>
                                    <div class="control">
                                        <div class="single-control">
                                            <span>Chất lượng sách</span>
                                            <div class="review-control-vote">
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                            </div>
                                        </div>
                                        <div class="single-control">
                                            <span>Chất lượng phục vụ</span>
                                            <div class="review-control-vote">
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="review-form">
                                    <div class="single-form">
                                        <label>Nickname <sup>*</sup></label>
                                        <form action="#">
                                            <input type="text" />
                                        </form>
                                    </div>
                                    <div class="single-form">
                                        <label>Nhận xét <sup>*</sup></label>
                                        <form action="#">
                                            <textarea name="massage" cols="10" rows="4"></textarea>
                                        </form>
                                    </div>
                                </div>
                                <div class="review-form-button">
                                    <a href="#">Xác nhận</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- product-info-area-end -->
                <!-- new-book-area-start -->
                <!-- new-book-area-start -->
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                <div class="shop-left">
                    <div class="left-title mb-20">
                        <h4>Sách cùng tác giả</h4>
                    </div>
                    @{
                        Html.RenderAction("Sanphamlienquan","Sanpham");
                    }
                    <div class="banner-area mb-30">
                        <div class="banner-img-2">
                            <a href="#"><img src="~/Content/img/banner/33.jpg" alt="banner" /></a>
                        </div>
                    </div>
                    <div class="left-title-2 mb-30">
                        <h2>Sản phẩm so sánh</h2>
                        <p>Bạn ko có sản phẩm nào</p>
                    </div>
                    <div class="left-title-2">
                        <h2>Danh sách yêu thích</h2>
                        <p>Bạn ko có sản phẩm nào trong danh sách yêu thích</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- product-main-area-end -->
