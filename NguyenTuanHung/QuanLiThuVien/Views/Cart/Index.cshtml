
@model List<QuanLiThuVien.Models.ViewModel.CartItemModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Content/js/Controller/CartItem.js"></script>
}
<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Trang chủ</a></li>
                        <li><a href="#" class="active">Giỏ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<!-- entry-header-area-start -->
<div class="entry-header-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="entry-header-title">
                    <h2>Giỏ</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- entry-header-area-end -->
<!-- cart-main-area-start -->
<div class="cart-main-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form action="#">
                    <div class="table-content table-responsive">
                        @if (Model.Count > 0)
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">Ảnh</th>
                                        <th class="product-name">Tên sách</th>
                                        <th class="product-firstday">Tác giả</th>
                                        <th class="product-lastday">Thể loại</th>
                                        <th class="product-quantity">Số lượng</th>
                                        <th class="product-remove">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="product-thumbnail">
                                                <a href="#"><img src="~/Content/img/product/@item.sach.ImgLink" alt="man" /></a>
                                            </td>
                                            <td class="product-name">
                                                <a href="#">@item.sach.Tensach</a>
                                            </td>
                                            <td class="product-firstday">
                                                <span class="amount">@item.sach.TacGia.Tentacgia</span>
                                            </td>
                                            <td class="product-firstday">
                                                <span class="amount">@item.sach.TheLoai.Tentheloai</span>
                                            </td>
                                            <td class="product-quantity">
                                                <input type="number" min="1" step="1" class="txtQuantity" data-id="@item.sach.SachID" value="@item.Quantity" />
                                                @*<form action="@Url.Action("SuaSoLuong")">
                                    <input type="hidden" name="sachID" value="@item.sach.SachID" />
                                    <input type="number" min="1" step="1" class="txtQuantity" data-id="@item.sach.SachID" value="@item.Quantity" />
                                    <button type="submit" class="btn btn-primary btn-sm"> Cập nhật </button>
                                </form>*@
                                            </td>
                                            <td class="product-remove">
                                                <a href="@Url.Action("XoaKhoiGio",new { sachID = item.sach.SachID})" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');" class="btn btn-danger btn-sm">Xóa</a>
                                                @*<a href="#"><i class="fa fa-times"></i></a>*@
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                                <button id="btnContinue" class="btn" href="/">Tiếp tục mua hàng</button>
                                <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
                                <button class="btn"><a href="/Cart/ShowInfo">Thanh toán</a></button>
                                @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                                {
                                    <button type="submit" class="btn">Thanh toán </button>
                                }
                            </div>

                        }
                        else
                        {
                            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
                        }
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- cart-main-area-end -->
