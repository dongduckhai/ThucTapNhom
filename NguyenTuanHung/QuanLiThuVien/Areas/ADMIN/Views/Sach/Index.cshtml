
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}


@using QuanLiThuVien.Models.Entities;
@model IEnumerable<Sach>


<section class="wrapper site-min-height">
    <!-- page start-->
    <section class="panel">
        <header class="panel-heading">
            Bảng sản phẩm
        </header>
        <div class="panel-body">
            <div class="adv-table editable-table ">
                <div class="clearfix">
                    <div class="btn-group">
                        <button onclick="window.location.href='/ADMIN/Sach/Create'" id="" class="btn green">
                            Add New <i class="fa fa-plus"></i>
                        </button>
                    </div>
                    <div class="btn-group pull-right">
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            Tools <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="#">Print</a></li>
                            <li><a href="#">Save as PDF</a></li>
                            <li><a href="#">Export to Excel</a></li>
                        </ul>
                    </div>
                </div>
                <div class="space15"></div>
                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Mã sách</th>
                            <th>Tên sách</th>
                            <th>Ảnh sách</th>
                            <th>Tên tác giả</th>
                            <th>Tên thể loại</th>
                            <th>Tên nhà xuất bản</th>
                            <th>Năm xuất bản</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (Sach i in Model)
                            {
                                <tr class="">
                                    <td>@i.SachID</td>
                                    <td>@i.Tensach</td>
                                    <td><img class="img-responsive" src="~/Content/img/product/@i.ImgLink" alt="" style="height: 100px;"/></td>
                                    <td class="center">@i.TacGia.Tentacgia</td>
                                    <td class="center">@i.TheLoai.Tentheloai</td>
                                    <td class="center">@i.NhaXuatBan.TenNXB</td>
                                    <td>@i.Namxuatban</td>
                                    <td><a href="/ADMIN/Sach/Edit/@i.SachID">Edit</a></td>
                                    <td><a href="@Url.Action("XoaSP",new { id = i.SachID})" onclick="return confirm('Bạn có chắc muốn xóa ?');" class="">Delete</a></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <!-- page end-->
</section>

